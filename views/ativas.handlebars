<main>
  <section class="tarefas">
    {{#each tarefas}}
      <div class="tarefa">
        <form action="">
            <div class="completa">
            <div>
              <input
                type="checkbox"
                id="tarefa-{{this.id}}"
                onchange="completarTarefa({{this.id}})"
              />
              <label for="tarefa-{{this.id}}">{{this.descricao}}</label>
            </div>
          <button>
            <img
              src="/img/x-icon.svg"
              alt="Ã­cone de x para excluir uma tarefa"
            />
          </button>
        </form>
      </div>
    {{/each}}
    <div class="informacoes">
      <p>{{quantidadeTarefasAtivas}} Tarefas Ativas</p>

      <section class="botoes">
        <a href="/" >Todas</a>
        <a href="/ativas" class="active">Ativas</a>
        <a href="/completas">Completas</a>
      </section>

      <a href="">Limpar Tarefas</a>
    </div>
  </section>

  <section class="botoes">
    <a href="/" >Todas</a>
    <a href="/ativas" class="active">Ativas</a>
    <a href="/completas">Completas</a>
